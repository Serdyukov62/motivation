{
  "name": "motivation",
  "version": "1.0.0",
  "main": "script.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc && npm run copy:html && npm run copy:assets && npm run copy:video",
    "copy:html": "mkdir -p dist && cp src/*.html dist/ && cp src/*.ico dist/",
    "copy:assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "copy:video": "mkdir -p dist/video && cp -r src/video/* dist/video/",
    "start": "http-server src -p 8084"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/youtube": "^0.1.2",
    "http-server": "^14.1.1"
  }
}
